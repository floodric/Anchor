<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.anchor" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hello Cordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <access origin="*" />
    <content src="index.html" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="GapBetweenPages" value="0" />
    <preference name="PageLength" value="0" />
    <preference name="PaginationBreakingMode" value="page" />
    <preference name="PaginationMode" value="unpaginated" />
    <feature name="LocalStorage">
        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <name>Anchor</name>
    <description>
        Anchor is a geolocation based texting app
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        Phineas Taylor-Webb
        Yaakov Lyubetsky
        Ajay Ravindran
        Ryan Flood
    </author>
    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="phonegap-version" value="3.1.0" />
    <preference name="orienation" value="portrait" />
    <preference name="target-device" value="handset" />
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <icon gap:density="hdpi" gap:platform="android" src="www/res/icon/android/icon_72.png" />
    <icon gap:platform="ios" height="114" src="www/res/icon/ios/icon_114.png" width="114" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="www/res/screen/android/hdpi_android_splash_screen.png" />
    <gap:splash gap:platform="ios" height="960" src="www/res/screen/ios/iphone4_splash_screen.png" width="640" />
</widget>
